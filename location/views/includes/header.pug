.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
  .container
    .navbar-header
      a.navbar-brand(href="/") #{title}
    if user
      p.navbar-text.navbar-right.navbar-nav
        span.nav-item 欢迎您 #{user.name}
        span &nbsp; | &nbsp;
        a.nav-item(href="/logout") 退出登录
    else
      p.navbar-text.navbar-right.navbar-nav
        a.nav-item(href="#", data-toggle="modal", data-target="#signinModal") 亲，请先登录
#signinModal.modal.fade(role="dialog")
  .modal-dialog.modal-dialog-centered
    .modal-content
      form(action="/user/signup", method="post")
        .modal-header 
          h5.modal-title#modal-title 登录
        .modal-body 
          .form-group
            .row.justify-content-center
              .col-2
                label(for="signupName") 用户名
              input#signupName.form-contol.col-6(type="text",name="user[name]",)
          .form-group
            .row.justify-content-center
              .col-2
                label(for="signupPassword") 密码
              input#signupPassword.form-contol.col-6(type="text",name="user[password]",)
        .row.justify-content-center
          .col-6
            button.btn.btn-outline-secondary.btn-block(type="submit") 登录
        .row.justify-content-center
          .col-12 
            p
