extends ../layout
block content 
  .container
    .row.justify-content-center
      .col-12 
        p &nbsp;
    .row.justify-content-center
      .col-12 
        p &nbsp;
    .row.justify-content-end.admin-adduser
      .col-2
        button.btn.btn-outline-dark.btn-block 刷 新
      .col-2
        a.btn.btn-outline-dark.btn-block(href="/newuser") 新 增 
    .row.justify-content-center
      .col-12 
        table.table.table-hover.table-dark.table-striped.mytable
          thead 
            th UID
            th 密码
            th 录入时间
            th 状态
            th 备注 
            th 更新 
            th 删除
          tbody
            each item in users 
              tr(class="item-id-#{item._id}")
                td #{item.uid}
                td #{item.password}
                td #{moment(item.meta.updateAt).format('MM/DD HH:MM')}
                td #{item.state}
                td #{item.notice}
                td: a(target="_blank",href="../movie/update/#{item._id}") 更新 
                td 
                  button.btn.btn-danger.btn-sm.del(type="button",data-id="#{item._id}") 删除
    .row
      .col-12 
        span &nbsp;
    .row
      .col-12 
        span &nbsp;
  script(src="/js/admin.js")